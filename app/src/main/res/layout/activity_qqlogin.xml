<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_qqlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="步骤"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1、点击下方获取二维码\n2、获取成功后,使用系统的截图功能进行截图\n3、打开QQ扫一扫功能，从相册选取截图的二维码进行授权登陆\n4、注意二维码有效时间短，请即使验证或重新获取二维码"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="二维码"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/img_ercode" />
    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:id="@+id/txt_status"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二维码状态:待请求"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/btn_get_ercode"
        android:onClick="getErCode"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="获取QQ二维码"/>
    <TextView
        android:id="@+id/txt_help"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不懂怎么操作？点击联系客服1059876295"/>
</LinearLayout>
